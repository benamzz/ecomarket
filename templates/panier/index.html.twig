{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<h1>Votre Panier</h1>
	{% for e in utilisateur %}
	<h1>{{e.nom}}</h1>
	{% endfor %}
	<table class="table">
		<thead>
			<tr>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantité</th>
				<th>Total</th>
				<th>Action</th>
			</tr>
		</thead>

		<tbody class="table-group-divider">

			{% for element in dataPanier %}
				<tr>
					<td>{{element.produit.nom}}</td>
					<td>{{element.produit.prix}}€</td>
					<td>{{element.quantite}}</td>
					<td>{{element.quantite * element.produit.prix}}€</td>
					<td>
						<a href="{{path("panier_add", {id:element.produit.id})}}" class="btn btn-success">
							<i class="bi bi-cart-plus">+</i>
						</a>
						<a href="{{path("panier_remove", {id:element.produit.id})}}" class="btn btn-warning">
							<i class="bi bi-cart-dash">-</i>
						</a>
						<a href="{{path("panier_delete", {id:element.produit.id})}}" class="btn btn-danger">
							<i class="bi bi-cart-x">Supprmier</i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5" class="text-center">Votre Panier est vide</td>
				</tr>
			{% endfor %}
		</tbody>

		<tfoot>
			<tr>
				<td colspan="3">Total</td>
				<td>{{total}}
					€</td>
				<td>
					<a href="{{path("app_panier")}}" onclick= (){

					}class="btn btn-primary">
					Valider le paiment
					</a>
					<a href="{{path("panier_delete_all")}}" class="btn btn-danger">
					Supprmier le panier
					</a>
					
				</td>
			</tr>
		</tfoot>
	</table>
{% endblock %}

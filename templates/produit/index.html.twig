{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}

{% block body %}
	<h1>Produits</h1>

	<table class="table">
		{% for p in produits %}
			<div class="card" style="width: 18rem;">
				{% if p.photo is not empty %}
					<img src="{{ asset('uploads/' ~ p.photo)}}" alt="{{p.nom}}">
				{% endif %}
				<div class="card-body">
					<h5 class="card-title">{{p.nom}}</h5>
					<p class="card-text">{{p.description}}</p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item">Prix :
						{{p.prix}}</li>
					<li class="list-group-item">
						Stock :
						{{p.stock}}
					</li>
					<a href="{{path('produit', {'id':p.id})}}" class="btn btn-primary">Voir</a>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{path('produit_delete', {'id':p.id})}}" class="btn btn-danger">Supprimer</a>
					{% endif %}
				</ul>
			</div>

		{% else %}
			<tr>
				<td colspan="5">Aucun produit</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
{% if is_granted('ROLE_ADMIN') %}
	<h2>Ajouter un produit</h2>
	{{form(ajout)}}{% endif %}
{% endblock %}

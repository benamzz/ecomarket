{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}

{% block body %}
	<h1>Produits</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Description</th>
				<th>Prix</th>
				<th>Quantit√©</th>
				<th>Image</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for p in produits %}
				<tr>
					<td>{{p.nom}}</td>
					<td>{{p.description}}</td>
					<td>{{p.prix}}</td>
					<td>{{p.stock}}</td>
					<td>
						{% if p.photo is not empty %}
							<img src="{{ asset('uploads/' ~ p.photo)}}" alt="{{p.nom}}">
						{% endif %}
					</td>
					<td>
						<a href="{{path('produit', {'id':p.id})}}" class="btn btn-primary">Voir</a>
						{% if is_granted('ROLE_ADMIN') %}
							<a href="{{path('produit_delete', {'id':p.id})}}" class="btn btn-danger">Supprimer</a>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun produit</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% if is_granted('ROLE_ADMIN') %}
		<h2>Ajouter un produit</h2>
		{{form(ajout)}}{% endif %}
	{% endblock %}
